{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "JSON Schema for login",
	"$id": "user/login",
	"type": "object",
	"properties": {
		"email": {
			"type": "string",
			"minLength": 1
		},
		"password": {
			"type": "string",
			"minLength": 1
		}
	},
	"required": [ "email", "password" ],
	"additionalProperties": false
}
